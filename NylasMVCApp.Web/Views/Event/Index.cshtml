@model NylasMVCApp.Web.Models.EventModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Event</h2>

@if (string.IsNullOrEmpty(ViewBag.Error))
{
    using (Html.BeginForm("Index", "Event", FormMethod.Post, new { @autocomplete = "off" }))
    {
        @Html.Hidden("calendar_id", Model.calendar_id);
        @*<div>@Model.calendar_id</div>*@
        <h2>Event Details</h2>
        <div class="form-group">
            <label for="title">Title:</label>
            @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="location">Location:</label>
            @Html.TextBoxFor(m => m.location, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
}
else
{
    <div class="alert alert-danger">
        <strong>Danger!</strong> @ViewBag.Error
    </div>

}
@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success">
        <strong>Success!</strong> New Event added into the calendar.
    </div>
}

